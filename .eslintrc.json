{
	"extends": ["airbnb-base", "prettier"],
	"rules": {
		"quotes": [
			2,
			"single",
			{
				"avoidEscape": true,
				"allowTemplateLiterals": true
			}
		],
		"indent": [2, "tab", { "SwitchCase": 1 }],
		"one-var": 0,
		"no-console": 0,
		"camelcase": 0,
		"no-shadow": 0,
		"singleQuote": true,
		"printWidth": 80,
		"no-unused-vars": [
			1,
			{
				"argsIgnorePattern": "res|next|^err"
			}
		]
	},
	"plugins": ["prettier"]
}
